	colors = true
	interval = 5
}

order += "load"
order += "cpu_temperature 0"
order += "battery 0"
order += "local"

load {
	format = "LOAD %5min"
	max_threshold = 2
}

cpu_temperature 0 {
	format = "%degrees Â°C"
	path = "/sys/devices/platform/coretemp.0/hwmon/hwmon2/temp1_input"
	max_threshold = 65
}

battery 0 {
	format = "%status %percentage"
	# format = "%status %percentage %remaining %emptytime"
	format_down = "No battery"
	status_chr = "CHR"
	status_bat = "BAT"
	status_full = "FULL"
	path = "/sys/class/power_supply/BAT%d/uevent"
	low_threshold = 30
	threshold_type = "time"
	integer_battery_capacity = true
}

tztime local {
	format = "%m/%d %H:%M"
}
